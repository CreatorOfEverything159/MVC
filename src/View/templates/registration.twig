<!doctype html>
<html lang="en">
{% include 'head.twig' %}
<body>
<div class="container">
    {% include 'header.twig' %}
</div>
<div class="container h-100 d-flex align-items-center justify-content-center flex-column">
    <div>
        <form method="post" action="/mvc/registration">
            <div class="row mb-2">
                <label for="login" class="col-form-label">Введите логин</label>
                <div class="input-group">
                    <input type="text" class="form-control login fields"
                           placeholder="Введите логин"
                           name="login" id="login">
                </div>
            </div>
            <div class="row mb-2">
                <label for="password" class="col-form-label">Введите пароль</label>
                <div class="input-group">
                    <input type="password" class="form-control old-password fields"
                           placeholder="Введите пароль"
                           name="password" id="password">
                </div>
            </div>
            <button type="submit" class="btn btn-success" id="submit-portfolio">Зарегистрироваться</button>
        </form>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
</body>
</html>